<section class="page bg-{{ color }} py-16">
    <div class="container mx-auto flex flex-wrap pt-6 pb-6">
        <div class="w-1/2 flex-none">
            <div class="sticky pin-t flex flex-wrap">
                <div class="w-2/3 p-6 pb-0" style="margin-left: 33.33333%;">
                    <h1 class="text-5xl text-{{ color }}-dark leading-none">{{ title|raw }}</h1>
                </div>
                <div class="w-1/3 p-6">
                    <ul class="menu list-reset">
                        <li class="nav-item {% if currentPage == 0 %}text-{{ color }}-dark{% endif %}" data-target="0">Feiten en cijfers</li>
                        <li class="nav-item {% if currentPage == 1 %}text-{{ color }}-dark{% endif %}" data-target="1">Leesplezier</li>
                        <li class="nav-item {% if currentPage == 2 %}text-{{ color }}-dark{% endif %}" data-target="2">Digitale geletterdheid</li>
                        <li class="nav-item {% if currentPage == 3 %}text-{{ color }}-dark{% endif %}" data-target="3">Kennisdeling en<br>
                            <span class="ml-2">Talentontwikkeling</span></li>
                        <li class="nav-item {% if currentPage == 4 %}text-{{ color }}-dark{% endif %}" data-target="4">Meedoen</li>
                        <li class="nav-item {% if currentPage == 5 %}text-{{ color }}-dark{% endif %}" data-target="5">Verbonden met de stad</li>
                    </ul>
                </div>
                <div class="text w-2/3 p-6 pr-12">
                    {% block leftContent %}{% endblock %}
                </div>
            </div>
        </div>
        <div class="statistic w-1/2">
            {% block rightContent %}{% endblock %}
        </div>
    </div>
</section>
